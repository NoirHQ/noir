{
	"name": "@horizon/sidecar",
	"version": "0.0.1",
	"description": "Cosmos API Sidecar for Horizon",
	"main": "dist/main.js",
	"scripts": {
		"build": "tsc",
		"lint": "eslint ./src --ext .ts",
		"test": "jest",
		"start": "node --es-module-specifier-resolution=node ./dist/main.js",
		"fmt": "eslint ./src --ext .ts --fix",
		"prepare": "patch-package --patch-dir node_modules/@pinot/api/patches"
	},
	"type": "module",
	"keywords": [],
	"author": "code0xff <ian.jungyong.um@gmail.com>",
	"license": "MIT",
	"jest": {
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"testRegex": "\\.spec\\.ts$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"json"
		]
	},
	"devDependencies": {
		"@types/config": "^3.3.0",
		"@types/jest": "^29.2.5",
		"@types/node": "^18.11.11",
		"@types/ws": "^8.5.5",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.29.0",
		"jest": "^29.3.1",
		"patch-package": "^8.0.0",
		"ts-jest": "^29.0.4",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4"
	},
	"dependencies": {
		"@cosmjs/encoding": "^0.30.1",
		"@fastify/static": "^6.10.2",
		"@fastify/websocket": "^8.1.0",
		"@pinot/api": "^0.3.0",
		"config": "^3.3.9",
		"cosmjs-types": "^0.8.0",
		"ethereum-cryptography": "^2.0.0",
		"fastify": "4.17.0",
		"json-rpc-2.0": "^1.6.0",
		"lmdb": "^2.8.3",
		"protobufjs": "^7.2.4"
	}
}